<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nightinicio"
    android:orientation="vertical"
    tools:context=".definicoes_luzActivity"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="@string/definicoes_luz" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:src="@drawable/ic_wb_incandescent_white_24dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:src="@drawable/ic_wb_incandescent_white_24dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:src="@drawable/ic_wb_incandescent_white_24dp" />

        <View
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_height="0.1dp"
            android:background="@android:color/darker_gray"/>

        <ImageView
            android:id="@+id/automatico"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:src="@drawable/ic_date_range_white_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/horario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham"
                android:gravity="center_horizontal"
                android:text="@string/BioHorario"
                android:textColor="#fff"
                android:textSize="20dp"
                android:layout_marginRight="10dp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_gravity="center"
                android:id="@+id/nivel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nivelI"
                android:fontFamily="@font/gotham"
                android:textColor="#fff"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/txt_horainicialI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:drawableEnd="@drawable/ic_wb_incandescent_white_24dp"
                android:fontFamily="@font/gotham"
                android:hint="@string/inicio"
                android:inputType="time"
                android:textColor="#fff"
                android:theme="@style/myEditTextStyle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ate"
                android:fontFamily="@font/gotham"
                android:textColor="#fff"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/txt_horafinalI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:drawableEnd="@drawable/ic_wb_incandescent_white_24dp"
                android:fontFamily="@font/gotham"
                android:hint="@string/fim"
                android:inputType="time"
                android:textColor="#fff"
                android:theme="@style/myEditTextStyle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_gravity="center"
                android:id="@+id/nivel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nivelII"
                android:fontFamily="@font/gotham"
                android:textColor="#fff"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/txt_horainicialII"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:drawableEnd="@drawable/ic_wb_incandescent_white_24dp"
                android:fontFamily="@font/gotham"
                android:hint="@string/inicio"
                android:inputType="time"
                android:textColor="#fff"
                android:theme="@style/myEditTextStyle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ate"
                android:fontFamily="@font/gotham"
                android:textColor="#fff"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/txt_horafinalII"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:drawableEnd="@drawable/ic_wb_incandescent_white_24dp"
                android:fontFamily="@font/gotham"
                android:hint="@string/fim"
                android:inputType="time"
                android:textColor="#fff"
                android:theme="@style/myEditTextStyle" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_gravity="center"
                android:id="@+id/nivel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nivelIII"
                android:fontFamily="@font/gotham"
                android:textColor="#fff"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/txt_horainicialIII"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:drawableEnd="@drawable/ic_wb_incandescent_white_24dp"
                android:fontFamily="@font/gotham"
                android:hint="@string/inicio"
                android:inputType="time"
                android:textColor="#fff"
                android:theme="@style/myEditTextStyle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ate"
                android:fontFamily="@font/gotham"
                android:textColor="#fff"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/txt_horafinalIII"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:drawableEnd="@drawable/ic_wb_incandescent_white_24dp"
                android:fontFamily="@font/gotham"
                android:hint="@string/fim"
                android:inputType="time"
                android:textColor="#fff"
                android:theme="@style/myEditTextStyle" />

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>